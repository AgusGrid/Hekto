{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/shared/components/*"],
      "@shared/*": ["app/shared/*"],
      "@models/*": ["app/models/*"],
      "@pages/*": ["app/pages/*"],
      "@config/*": ["app/config/*"],
      "@environment/*": ["environments/*"],
      "@helpers/*": ["app/helpers/*"]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}